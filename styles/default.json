{
    "version": 8,
    "name": "Default",
    "center": [0, 0],
    "zoom": 0,
    "bearing": 0,
    "pitch": 0,
    "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
    "sprite": "https://storage.googleapis.com/hellopvt3/sprites",
    "sources": {
        "sat": {
            "type": "raster",
            "tiles": ["https://tile.openstreetmap.org/{z}/{x}/{y}.png"],
            "minzoom": 0,
            "maxzoom": 23
        },
        "planet": {
            "type": "planet",
            "tiles": ["info", "tests/fixtures/santacruz/sort"],
            "sprite": "https://storage.googleapis.com/hellopvt3/sprites",
            "minzoom": 0,
            "maxzoom": 12
        }
    },
    "layers": [
        {
            "id": "background",
            "type": "background",
            "maxzoom": 24,
            "paint": {
                "background-color": "#6C3102"
            }
        },
        {
            "id": "sat",
            "type": "raster",
            "source": "sat",
            "paint": {
                "raster-opacity": 1
            }
        },
        {
            "id": "tile_boundary_fill",
            "type": "fill",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_boundary",
            "paint": {
                "fill-color": "rgba(255, 105, 180, 0.001)"
            }
        },
        {
            "id": "tile_boundary",
            "type": "line",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_boundary",
            "paint": {
                "line-color": "rgba(255, 255, 255, 0.1)",
                "line-width": 1
            },
            "filter": ["==", "highest_zoom", true]
        },
        {
            "id": "render_tile_boundary",
            "type": "line",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_boundary",
            "filter": ["==", "is_render_tile", true],
            "paint": {
                "line-color": "rgba(255, 255, 255, 0.4)",
                "line-width": 1
            }
        },
        {
            "id": "selected_tile_boundary",
            "type": "line",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_boundary",
            "paint": {
                "line-color": "#FFC000",
                "line-width": 3,
                "line-opacity": ["case", ["boolean", ["feature-state", "selected"], false], 1, 0]
            }
        },
        {
            "id": "tile_bearing",
            "type": "line",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_bearing",
            "filter": ["==", "z", -1],
            "paint": {
                "line-color": "#ff69b4",
                "line-width": 3
            }
        },
        {
            "id": "tile_bearing_arrow",
            "type": "symbol",
            "source": "planet",
            "minzoom": 0,
            "maxzoom": 23,
            "source-layer": "tile_bearing",
            "filter": ["==", "z", -1],
            "layout": {
                "icon-image": "dark-trail-direction",
                "symbol-placement": "line"
            }
        },
        {
            "id": "render_tile_bearing",
            "type": "line",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_bearing",
            "filter": ["==", "is_render_tile", true],
            "layout": { "visibility": "none" },
            "paint": {
                "line-color": "rgba(255, 105, 180, 0.5)",
                "line-width": 2
            }
        },
        {
            "id": "render_tile_bearing_arrow",
            "type": "symbol",
            "source": "planet",
            "minzoom": 0,
            "maxzoom": 23,
            "source-layer": "tile_bearing",
            "filter": ["==", "is_render_tile", true],
            "layout": {
                "icon-image": "dark-trail-direction",
                "symbol-placement": "line",
                "visibility": "none"
            }
        },
        {
            "id": "nodes",
            "type": "circle",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "nodes",
            "paint": {
                "circle-radius": 4,
                "circle-color": "#ff69b4"
            }
        },
        {
            "id": "ways",
            "type": "line",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "ways",
            "paint": {
                "line-color": "rgba(192, 255, 239, 0.8)",
                "line-width": 2
            }
        },
        {
            "id": "tile_center_label",
            "type": "symbol",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_center",
            "filter": ["==", "z", -1],
            "layout": {
                "text-font": ["Open Sans Semibold"],
                "text-field": "{h}",
                "text-size": 14
            },
            "paint": {
                "text-color": "white"
            }
        },
        {
            "id": "render_tile_center_label",
            "type": "symbol",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_center",
            "filter": ["==", "is_render_tile", true],
            "layout": {
                "text-font": ["Open Sans Semibold"],
                "text-field": "{tile}",
                "text-size": 32,
                "visibility": "none"
            },
            "paint": {
                "text-color": "rgba(255, 255, 255, 0.3)"
            }
        }
    ]
}
