{
    "version": 8,
    "name": "Default",
    "center": [0, 0],
    "zoom": 0,
    "bearing": 0,
    "pitch": 0,
    "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
    "sprite": "https://storage.googleapis.com/hellopvt3/sprites",
    "sources": {
        "sat": {
            "type": "raster",
            "tiles": ["https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}"],
            "minzoom": 0,
            "maxzoom": 23
        },
        "planet": {
            "type": "planet",
            "tiles": ["info_tile"],
            "minzoom": 0,
            "maxzoom": 9,
            "sprite": "https://storage.googleapis.com/hellopvt3/sprites"
        }
    },
    "layers": [
        {
            "id": "background",
            "type": "background",
            "maxzoom": 24,
            "paint": {
                "background-color": "#f7f1cd"
            }
        },
        {
            "id": "sat",
            "type": "raster",
            "source": "sat",
            "paint": {
                "raster-opacity": 1
            }
        },
        {
            "id": "tile_boundary_fill",
            "type": "fill",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_boundary",
            "paint": {
                "fill-color": "rgba(255, 105, 180, 0.001)"
            }
        },
        {
            "id": "tile_boundary",
            "type": "line",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_boundary",
            "paint": {
                "line-color": "rgba(255, 255, 255, 0.3)",
                "line-width": 1
            },
            "filter": ["==", "highest_zoom", true]
        },
        {
            "id": "render_tile_boundary",
            "type": "line",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_boundary",
            "filter": ["==", "render_tile", true],
            "paint": {
                "line-color": "rgba(14, 236, 183, 1)",
                "line-width": 1
            }
        },
        {
            "id": "tile_bearing",
            "type": "line",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_bearing",
            "filter": ["==", "highest_zoom", true],
            "paint": {
                "line-color": "#ff69b4",
                "line-width": 3
            }
        },
        {
            "id": "tile_bearing_arrow",
            "type": "symbol",
            "source": "planet",
            "minzoom": 0,
            "maxzoom": 23,
            "source-layer": "tile_bearing",
            "filter": ["==", "highest_zoom", true],
            "layout": {
                "icon-image": "dark-trail-direction",
                "symbol-placement": "line"
            }
        },
        {
            "id": "render_tile_bearing",
            "type": "line",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_bearing",
            "filter": ["==", "render_tile", true],
            "layout": { "visibility": "none" },
            "paint": {
                "line-color": "rgba(14, 236, 183, 1)",
                "line-width": 2
            }
        },
        {
            "id": "tile_center",
            "type": "circle",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_center",
            "layout": { "visibility": "none" },
            "paint": {
                "circle-radius": 2,
                "circle-color": "#ff69b4"
            }
        },
        {
            "id": "tile_center_label",
            "type": "symbol",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_center",
            "filter": ["==", "highest_zoom", true],
            "layout": {
                "text-font": ["Open Sans Semibold"],
                "text-field": "{h}",
                "text-size": 10
            },
            "paint": {
                "text-color": "white"
            }
        },
        {
            "id": "render_tile_center_label",
            "type": "symbol",
            "minzoom": 0,
            "maxzoom": 23,
            "source": "planet",
            "source-layer": "tile_center",
            "layout": {
                "text-font": ["Open Sans Semibold"],
                "text-field": "{h}",
                "text-size": 18,
                "visibility": "none"
            },
            "paint": {
                "text-color": "rgba(14, 236, 183, 1)"
            }
        }
    ]
}
