    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pvt'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pvt",
                    "--package=planet-vector-tile"
                ],
                "filter": {
                    "name": "pvt",
                    "kind": "bin"
                }
            },
            "args": ["--overwrite", "./test/fixtures/4nodes/4nodes.osm.pbf", "./test/fixtures/4nodes/archive"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pvt'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=pvt",
                    "--package=planet-vector-tile"
                ],
                "filter": {
                    "name": "pvt",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}