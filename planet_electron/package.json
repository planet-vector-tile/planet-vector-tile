{
  "name": "planet_electron",
  "author": "Nick Hallahan",
  "description": "The desktop Electron app to view Planet Vector Tiles.",
  "version": "0.0.1",
  "main": "src/main.js",
  "scripts": {
    "postinstall": "cd ../planet_node && npm ci",
    "start": "run-p --race dev:parcel dev:sync-electron",
    "dev:parcel": "parcel ./src/index.html",
    "dev:sync-electron": "run-s prod:build-node dev:wait-for-parcel dev:electron",
    "dev:build-node": "cd ../planet_node && npm run build:debug",
    "dev:wait-for-parcel": "wait-on http://localhost:1234",
    "dev:electron": "electron .",
    "prod:make-deps": "run-p prod:parcel prod:build-node",
    "prod:parcel": "rimraf dist && parcel build ./src/index.html --public-url ./",
    "prod:build-node": "cd ../planet_node && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^21.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.7.0",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "wait-on": "^6.0.1"
  },
  "targets": {
    "main": false
  },
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@mui/material": "^5.10.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
